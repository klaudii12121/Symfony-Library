{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_delete'|trans }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_delete'|trans }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('category_delete', {id: category.id}) }) }}
    {{ form_widget(form) }}
    <p>{{ 'sure_to_remove_category'|trans }} "{{ category.categoryName }}"{{ 'category'|trans }}? </p>
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'action_back_to_list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}